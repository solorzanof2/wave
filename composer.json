{
    "name": "wave-framework/wave",
    "type": "library",
    "description": "Wave is a lightweight PHP5.3 MVC framework",
    "keywords": ["framework", "mvc", "orm", "lightweight", "controllers", "models", "views"],
    "homepage": "http://github.com/wave-framework/wave",

    "authors": [
        {
            "name": "Patrick Hindmarsh",
            "email": "patrick@hindmar.sh",
            "homepage": "https://github.com/phindmarsh"
        },
        {
            "name": "Michael Calcinai",
            "email": "michael@calcin.ai"
        }
    ],

    "bin": [ "bin/wave", "phakefile" ],

    "require": {
        "php": ">=5.3.2",
        "twig/twig": "1.*",
        "swiftmailer/swiftmailer": "4.2.*",
        "monolog/monolog": "1.*",
        "jaz303/phake": "dev-master"
    },

    "autoload": {
        "psr-0": {
            "PostInstall": "bin/composer",
            "Wave": "src"
        },
        "files": ["src/Wave/Enums.php"]
    }

}
